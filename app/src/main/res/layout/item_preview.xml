<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginStart="@dimen/itemLeftMargin"
    android:layout_marginLeft="@dimen/itemLeftMargin"
    android:layout_marginEnd="@dimen/itemRightMargin"
    android:layout_marginRight="@dimen/itemRightMargin"
    >
<LinearLayout

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:minHeight="@dimen/minCardHeight"
    >
    <ImageView
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:id="@+id/feedPreviewImg"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitCenter"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_weight="2"
        android:id="@+id/feedPreviewTitle"
        android:text="@string/app_name"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/itemLeftMargin"
        android:layout_marginRight="@dimen/itemRightMargin"
        />
</LinearLayout>
</android.support.v7.widget.CardView>